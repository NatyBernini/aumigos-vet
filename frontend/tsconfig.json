{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "scripthost"
    ],
    "types": ["vuetify", "node", "vitest/globals"],
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
      "@helpers/*": ["src/modules/commons/helpers/*"],
      "@components/*": ["src/modules/commons/components/*"],
      "@services/*": ["src/modules/commons/services/*"],
      "@store/*": ["src/modules/commons/store/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./test/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
